<div class="modal-form-body">
  <div class="banner-modal-wrapper">
    <div class="banner-modal banner banner-top banner-gradient text-center is-active" style="background-image:url('/assets/banners/banner-employers.jpg');">
      <div class="banner-gradient-shadow"></div>
      <div class="banner-content">
        <h1 class="glitch">
          <span><%= t('pages.employers.hiring_modal_title_part_1', default: 'Join our ') %></span>
          <span class="underlined"><%= t('pages.employers.hiring_modal_title_part_2', default: 'Hiring Network') %></span>
        </h1>
      </div>
    </div>
  </div>
  <div class="modal-form-rows-container">
    <%= simple_form_for employer, remote: true do |f| %>
      <%= f.input :first_name, wrapper_html: { class: 'modal-form-row' }, placeholder: 'Alan', label: label_with_icon("account", t('pages.employers.hiring_modal_first_name', default: "First Name")) %>
      <%= f.input :last_name, wrapper_html: { class: 'modal-form-row' }, placeholder: 'Turing', label: label_with_icon("format-text", t('pages.employers.hiring_modal_last_name', default: "Last Name")) %>
      <%= f.input :email, wrapper_html: { class: 'modal-form-row' }, placeholder: 'alan@turing.com', label: label_with_icon("email-open", t('pages.employers.hiring_modal_email', default: "Email"))  %>
      <%= f.input :phone_number, wrapper_html: { class: 'modal-form-row' }, placeholder: '+33612345678', label: label_with_icon("cellphone-iphone", t('pages.employers.hiring_modal_phone_number', default: "Phone Number"))  %>
      <%= f.input :company, wrapper_html: { class: 'modal-form-row' }, placeholder: 'Stripe', label: label_with_icon("domain", t('pages.employers.hiring_modal_company', default: "Company"))   %>
      <%= f.input :website, as: :url, wrapper_html: { class: 'modal-form-row' }, placeholder: 'https://stripe.com', label: label_with_icon("web", t('pages.employers.hiring_modal_website', default: "Website")) %>
      <%= f.input :targets, collection: JOB_TITLES, as: :check_boxes, label: label_with_icon("account-search", t('pages.employers.hiring_modal_targets', default: "What are you looking for?")), include_hidden: false, wrapper_html: { class: 'modal-form-row-custom', id: "job-titles-select" }, collection_wrapper_tag: :div, collection_wrapper_class: "checkbox-list"%>
      <%= f.input :locations, collection: @cities, as: :check_boxes, label_method: :name, value_method: :slug, label: label_with_icon("map-marker", t('pages.employers.hiring_modal_locations', default: "In which city(ies) would you like to meet our community ?")), include_hidden: false, wrapper_html: { class: 'modal-form-row-custom', id: "cities-select" }, input_html: { class: 'special' }, collection_wrapper_tag: :div, collection_wrapper_class: "checkbox-list", collection_wrapper_id: "cities-select" %>
      <%= f.input :message, as: :text, label: label_with_icon("content-paste", t('pages.employers.hiring_modal_message', default: "Why do you want to recruit Le Wagon's alumni?")), include_hidden: false, wrapper_html: { class: 'modal-form-row-custom' } %>
      <div class="modal-form-row-submit">
        <%= f.submit t('pages.employers.hiring_modal_submit', default: "Join our Hiring Network"), class: "btn" %>
      </div>
    <% end %>
  </div>
</div>




