<%
  general_audience_tracker = '751967801553090'
%>

<% unless (@city && @city["apply_facebook_pixel"] == general_audience_tracker) %>
<script class="_iub_cs_activate-inline" type="text/plain">(function() {
  var _fbq = window._fbq || (window._fbq = []);
  if (!_fbq.loaded) {
    var fbds = document.createElement('script');
    fbds.async = true;
    fbds.src = '//connect.facebook.net/en_US/fbds.js';
    var s = document.getElementsByTagName('script')[0];
    s.parentNode.insertBefore(fbds, s);
    _fbq.loaded = true;
  }
  _fbq.push(['addPixelId', '<%= general_audience_tracker %>']);
})();
window._fbq = window._fbq || [];
window._fbq.push(['track', 'PixelInitialized', {}]);
</script>
<% end %>
