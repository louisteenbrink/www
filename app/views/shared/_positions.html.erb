<% positions = Position.all %>

<% cache [ 'positions', positions, locale ] do %>
<div class="positions-overlay">
  <div class="container">
    <h2 class="section-title-home section-title-home-small">
      <div class="section-title-home-content" style="background: white;">
        <%= t(".they_hired_our_students") %>
      </div>
    </h2>
    <p class="text-muted text-center section-title-home-subtitle">
      <%= t ".where_our_students_are_working" %>
    </p>
    <div class="positions-container">
      <div class="row">
      <% positions.each do |position| %>
        <div class="col-xs-12 col-sm-4 col-md-3">
          <div class="card-position">
            <div class="position-company-container">
              <%= image_tag position.company_logo, alt: position.company_name %>
            </div>
            <div class="position-alumni-container">
              <%= cl_adaptive_image_tag position.avatar_url, width: 40, height: 40, crop: :fill %>
              <div class="position-alumni-details">
                <p class="alumni-name">
                  <%= position.name %>
                </p>
                <p class="alumni-title"><%= position.title %></p>
              </div>
            </div>
            <a href="<%= position.company_url %>" target="_blank" class="company-link"></a>
          </div>
        </div>
      <% end %>
      </div>
    </div>
    <% unless params[:action] == "employers" %>
      <div class="text-center" style="margin: 60px 0;">
        <%= link_to t(".join_our_network"), employers_path, class: "link-big" %>
      </div>
    <% end %>
  </div>
</div>
<% end %>
