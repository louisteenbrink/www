<% posts.each_slice(3) do |pp| %>
  <div class="row">
    <% pp.each do |post| %>
      <div class="col-sm-8 col-sm-offset-2">
        <a href="<%= post.is_a?(AlumniStory) ? story_path(post.slug) : post_path(post.slug) %>">
          <article class="post-thumbnail">
            <div class="card-author">
              <div class="background-author" style="background-image: url('<%= asset_path "blog/#{post.thumbnail}" %>')"></div>
              <% if post.author %>
                <% author = post.author %>
                <% if author %>
                  <div class="post-author">
                    <% if author[:picture] %>
                      <%= image_tag author[:picture], class: 'author-picture' %>
                    <% end %>
                    <div class="author-details">
                      <span class="author-name"><%= author[:fname] %> <%= author[:lname] %></span>
                      <i class="author-position"><%= author[:position] %><br><small>at <%= author[:company] %></small></i>
                    </div>
                  </div>
                <% end %>
              <% end %>
            </div>
            <div class="card-content">
              <ul>
                <% post.labels.each do |tag| %>
                  <li><%= tag %></li>
                <% end %>
              </ul>
              <h2><%= post.title %></h2>
              <% if post.description %>
                <p class="description"><%= post.description.truncate(260) %></p>
              <% end %>
              <span class="read-time">
                <i class="fa fa-clock-o" aria-hidden="true"></i> <%= post.read_time %> min reading
                <% if post.date %> - Posted on <%= post.date.to_date.strftime("%d %b %Y") %><% end %>
              </span>
            </div>
          </article>
        </a>
      </div>
    <% end %>
  </div>
<% end %>